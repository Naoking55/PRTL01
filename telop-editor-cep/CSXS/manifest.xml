<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ExtensionManifest xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" ExtensionBundleId="com.telopeditor.cep" ExtensionBundleVersion="1.0.0" Version="10.0">
    <ExtensionList>
        <Extension Id="com.telopeditor.panel" Version="1.0.0"/>
    </ExtensionList>
    <ExecutionEnvironment>
        <HostList>
            <!-- Adobe Premiere Pro -->
            <Host Name="PPRO" Version="[14.0,99.9]"/>
        </HostList>
        <LocaleList>
            <Locale Code="All"/>
        </LocaleList>
        <RequiredRuntimeList>
            <RequiredRuntime Name="CSXS" Version="10.0"/>
        </RequiredRuntimeList>
    </ExecutionEnvironment>
    <DispatchInfoList>
        <Extension Id="com.telopeditor.panel">
            <DispatchInfo>
                <Resources>
                    <MainPath>./client/index.html</MainPath>
                    <ScriptPath>./host/index.jsx</ScriptPath>
                    <CEFCommandLine>
                        <Parameter>--enable-nodejs</Parameter>
                        <Parameter>--mixed-context</Parameter>
                    </CEFCommandLine>
                </Resources>
                <Lifecycle>
                    <AutoVisible>true</AutoVisible>
                </Lifecycle>
                <UI>
                    <Type>Panel</Type>
                    <Menu>Telop Editor</Menu>
                    <Geometry>
                        <Size>
                            <Height>600</Height>
                            <Width>1200</Width>
                        </Size>
                        <MinSize>
                            <Height>400</Height>
                            <Width>800</Width>
                        </MinSize>
                        <MaxSize>
                            <Height>2000</Height>
                            <Width>3000</Width>
                        </MaxSize>
                    </Geometry>
                    <Icons>
                        <Icon Type="Normal">./icons/icon-normal.png</Icon>
                        <Icon Type="RollOver">./icons/icon-rollover.png</Icon>
                        <Icon Type="Disabled">./icons/icon-disabled.png</Icon>
                        <Icon Type="DarkNormal">./icons/icon-dark-normal.png</Icon>
                        <Icon Type="DarkRollOver">./icons/icon-dark-rollover.png</Icon>
                    </Icons>
                </UI>
            </DispatchInfo>
        </Extension>
    </DispatchInfoList>
</ExtensionManifest>
