<ExtensionManifest Version="9.0" ExtensionBundleId="com.motiondesk.textylepremiere" ExtensionBundleVersion="1.0.0" ExtensionBundleName="Textyle Premiere"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <ExtensionList>
        <Extension Id="com.aescripts.textylepremiere.about" Version="4.0.001" />
        <Extension Id="com.motiondesk.textylepremiere.index" Version="1.0.0"/>
    </ExtensionList>
    <ExecutionEnvironment>
        <HostList>
            <Host Name="PPRO" Version="[12,99]"/>
        </HostList>
        <LocaleList>
            <Locale Code="All" />
        </LocaleList>
        <RequiredRuntimeList>
            <RequiredRuntime Name="CSXS" Version="9.0" />
        </RequiredRuntimeList>
    </ExecutionEnvironment>
    <DispatchInfoList>
        <Extension Id="com.motiondesk.textylepremiere.index">
            <DispatchInfo >
                <Resources>
                    <MainPath>./index.html</MainPath>
                    <ScriptPath>./Main.jsxbin</ScriptPath>
                    <!-- <ScriptPath>./Main.jsx</ScriptPath> -->
                    <CEFCommandLine>
                        <Parameter>--enable-nodejs</Parameter>
                        <Parameter>--allow-file-access-from-files</Parameter>
                        <Parameter>--allow-file-access</Parameter>
                    </CEFCommandLine>
                </Resources>
                <Lifecycle>
                    <AutoVisible>true</AutoVisible>
                </Lifecycle>
                <UI>
                    <Type>Panel</Type>
                    <Menu>Textyle Premiere</Menu>
                    <Geometry>
                        <Size>
                            <Height>400</Height>
                            <Width>600</Width>
                        </Size>
                        <MaxSize>
                            <Height>400</Height>
                            <Width>600</Width>
                        </MaxSize>
                        <MinSize>
                            <Height>400</Height>
                            <Width>600</Width>
                        </MinSize>
                    </Geometry>
                    <Icons>
                        <Icon Type="Normal">./img/like1.png</Icon>
                        <Icon Type="RollOver">./img/like1.png</Icon>
                        <Icon Type="DarkNormal">./img/like1.png</Icon>
                        <Icon Type="DarkRollOver">./img/like1.png</Icon>
                    </Icons>
                </UI>
            </DispatchInfo>
        </Extension>
        <Extension Id="com.aescripts.textylepremiere.about">
            <DispatchInfo >
                <Resources>
                    <MainPath>./dialog/dialog.html</MainPath>
                    <CEFCommandLine>
                        <Parameter>--enable-nodejs</Parameter>
                        <Parameter>--allow-file-access-from-files</Parameter>
                        <Parameter>--allow-file-access</Parameter>
                    </CEFCommandLine>
                </Resources>
                <Lifecycle>
                    <AutoVisible>true</AutoVisible>
                </Lifecycle>
                <UI>
                    <Type>Modeless</Type>
                    <Geometry>
                        <Size>
                            <Height>440</Height>
                            <Width>350</Width>
                        </Size>
                        <MaxSize>
                            <Height>500</Height>
                            <Width>350</Width>
                        </MaxSize>
                        <MinSize>
                            <Height>100</Height>
                            <Width>350</Width>
                        </MinSize>
                    </Geometry>
                </UI>
            </DispatchInfo>
        </Extension>
    </DispatchInfoList>
</ExtensionManifest>